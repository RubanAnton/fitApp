<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme2"
    tools:context="anton_ruban.fitz.coach.CreateTraining.view.SingleCreateTrainingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/editNameTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name training"
                android:textColor="@color/textColor"
                android:textColorHint="@color/colorPrimary"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editDateTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Training"
                android:onClick="onSelectDate"
                android:textColor="@color/textColor"
                android:textColorHint="@color/colorPrimary"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editDescriptionTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description training"
                android:textColor="@color/textColor"
                android:textColorHint="@color/colorPrimary"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/card_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select exercise for user"
            android:textSize="20sp"
            android:textColor="@color/textColor"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearWramTypeSingle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="setLinearWarm"
                android:layout_marginStart="30dp"
                android:background="@drawable/corner_btn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="35dp"
                    android:text="WARM UP"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearEmomSingle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/corner_btn"
                android:onClick="setLinearEmom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="35dp"
                    android:text="EMOM"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearAmrapSingle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="setLinearAmRap"
                android:layout_marginStart="30dp"
                android:background="@drawable/corner_btn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="35dp"
                    android:text="AMRAP"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearAmrap15Single"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/corner_btn"
                android:onClick="setLinearAmrap15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="35dp"
                    android:text="AMRAP 15"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_btn"
            android:id="@+id/createSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create single training"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:onClick="clickCreateSingleTraining"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
