<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anton_ruban.fitz.coach.notifyTraining.NotifyTrainingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColor"
                android:layout_marginTop="5dp"/>
            <TextView
                android:text="@string/resolvedTraining"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColor"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/resolvedRecyclerTrainint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColor"
                android:layout_marginTop="5dp"/>
            <TextView
                android:text="@string/unresolvedTraining"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColor"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/unresolvedRecyclerTraining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
